<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to (image_tag ('gibbitwhite.png')), root_path, class: "navbar-wagon-brand" %>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
 <!--      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %> -->

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag "v1492065440/douglas_s9punp.jpg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to inquiries_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "My Requests") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>


    <% elsif gibber_signed_in? %>

      <ul class="list-inline">
        <li>
          <%= link_to t(".sign_in", default: "Dashboard"),  gibbers_inquiries_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>

        <li>
          <%= link_to "Sign Out", destroy_gibber_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
      </ul>

    <% else %>
      <%= link_to t(".sign_in", default: "Gibber"), new_gibber_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "Join"), new_user_registration_path, class: "navbar-wagon-item join-button btn" %>
    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <% if user_signed_in? %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to inquiries_path do %>
                <i class="fa fa-user"></i>
                <%= t(".profile", default: "My Requests") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>
                <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>

        <% elsif gibber_signed_in? %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to t(".sign_in", default: "Dashboard"),  gibbers_inquiries_path, class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to "Sign Out", destroy_gibber_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
          </ul>

        <% else %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to t(".sign_in", default: "Gibber"), new_gibber_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to t(".top_call_to_action", default: "Join"), new_user_registration_path, class: "navbar-wagon-item join-button btn", style: "
                                                padding-left: 20px;
                                                margin-left: 17px;
                                                margin-right: 17px;"
              %>
            </li>
          </ul>
        <% end %>
    </div>
  </div>
</div>
