<div class="wrapper-inquiry-form">
  <%= simple_form_for [@inquiry] do |f| %>
    <ul class="list-inline">
      <li>
        <%= f.label :description %>
      </li>
      <li>
        <i type="button" data-container="body" data-toggle="popover" data-placement="right" data-content="Ok, I wanna eat banana.">
              <%= cl_image_tag url="v1493029127/001-round-help-button_fkvtni.png", class: "question-button" %>
        </i>
      </li>
    </ul>
    <%= f.input :description, label: false, as: :text %>
    <%= f.input :photo, required: false %>
    <%= f.input :photo_cache, required: false, as: :hidden %>
    <div class="form-button">
      <%= f.submit "Make Request", class: "btn gibbit-button" %>

    </div>
  <% end %>
</div>
