<div class="container">

  <h3>Need Assignment</h3>
  <% @empties.each do |empty| %>
      <p><%= empty.status %> <%= empty.description %> No gibbers yet ! </p>
      <%= link_to "Propose", propose_gibbers_inquiry_path(empty), method: :patch, class: "btn btn-warning" %>
  <% end %>

  <h3>Open Inquiries</h3>
  <% @pendings.each do |pending| %>
      <p><%= pending.status %> <%= pending.description %> <%= pending.gibber.nil? ? "No gibbers yet!" : pending.gibber.first_name %>
      <%= link_to "Propose", propose_gibbers_inquiry_path(pending), method: :patch, class: "btn btn-warning" %></p>
            <%= form_tag assign_gibber_gibbers_inquiry_path(pending), method: :patch do %>
            <%= collection_select :gibber, :id, @gibbers,:id, :first_name %>
            <%= submit_tag "Assign", class: "btn btn-primary" %>
          <% end %>
  <% end %>

  <% @proposals.each do |proposal| %>
      <p><%= proposal.status %> <%= proposal.description %> <%= proposal.gibber.nil? ? "No gibbers!" : proposal.gibber.first_name %>
      <%= link_to "Pending", pending_gibbers_inquiry_path(proposal), method: :patch, class: "btn btn-danger" %>
      <%= link_to "Complete", complete_gibbers_inquiry_path(proposal), method: :patch, class: "btn btn-success" %>
  <% end %></p>

  <% @acceptions.each do |acception| %>
      <p><%= acception.status %> <%= acception.description %> <%= acception.gibber.nil? ? "No gibbers!" : acception.gibber.first_name %></p>
  <% end %>

  <h3>Completed Inquiries</h3>
  <% @completions.each do |completion| %>
      <p><%= completion.status %> <%= completion.description %></p>
  <% end %>
  <% @rejections.each do |rejection| %>
      <p><%= rejection.status %> <%= rejection.description %></p>
  <% end %>
</div>


