<%= simple_form_for @inquiry, url: add_review_inquiry_path(@inquiry), method: :patch do |f| %>
<%#= f.select :rating, options_for_select(0..5) ,label: false %>
<%= f.input :rating, label: false, as: :radio_buttons, collection: (1..5).each, item_label_class: "radio-inline", item_wrapper_tag: false %>

<%= f.input :review, placeholder: "Leave us a review", label: false %>

<div class="message-box-button">
<%= f.submit "Send", class: "btn gibbit-button" %>
</div>
<% end %>

